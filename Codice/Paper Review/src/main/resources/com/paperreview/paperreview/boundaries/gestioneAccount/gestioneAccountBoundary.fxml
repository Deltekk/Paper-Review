<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/24"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.paperreview.paperreview.controllers.GestioneAccountControl"
            prefWidth="1280" prefHeight="720"
            maxHeight="Infinity" maxWidth="Infinity"
            styleClass="bg-bianco">

    <VBox alignment="CENTER"
          spacing="25"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <Label text="GESTIONE ACCOUNT" styleClass="h1, font-bold, text-blu-scuro"/>

        <VBox spacing="15" alignment="CENTER">
            <Button text="Modifica Password" styleClass="confirm-button"/>
            <Button text="Logout" styleClass="confirm-button bg-rosso"/>
        </VBox>
    </VBox>
</AnchorPane>
