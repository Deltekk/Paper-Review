<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<HBox xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.paperreview.paperreview.controllers.LoginController"
      stylesheets="@login.css" >

    <!-- Barra laterale con logo -->
    <VBox prefWidth="300" styleClass="sidebar" alignment="CENTER">

        <ImageView fx:id="logoImage" fitWidth="200" preserveRatio="true" />
        <!-- eventualmente aggiungi altri elementi qui -->
    </VBox>

    <!-- Contenuto principale login -->
    <VBox spacing="15" alignment="CENTER" styleClass="login-container">

        <Label text="ACCEDI" styleClass="title-label" />

        <Label fx:id="errorLabel" textFill="red" visible="false" styleClass="error-label"/>

        <TextField fx:id="emailField" promptText="Inserisci la tua mail" maxWidth="300"
                   styleClass="input-field" />

        <PasswordField fx:id="passwordField" promptText="Inserisci la tua password" maxWidth="300"
                       styleClass="input-field" />

        <Button text="Conferma" maxWidth="300" styleClass="confirm-button"
                onAction="#handleLogin" />

        <HBox spacing="20" alignment="CENTER">
            <Label text="Non hai un account?" styleClass="normal-label" />
            <Hyperlink text="Registrati!" styleClass="link-label" onAction="#handleRegister"/>
        </HBox>

        <HBox spacing="20" alignment="CENTER">
            <Label text="Non ti ricordi la password?" styleClass="normal-label" />
            <Hyperlink text="Recuperala!" styleClass="link-label" onAction="#handleRecover"/>
        </HBox>

    </VBox>

</HBox>
